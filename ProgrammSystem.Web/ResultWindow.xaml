<Window x:Class="ProgrammSystem.Web.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammSystem.Web"
        mc:Ignorable="d"
        Title="ResultWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Q}"/>
            <TextBlock Text="{Binding Temp}"/>
            <TextBlock Text="{Binding Visc}"/>
            <DataGrid x:Name="resultsGrid" ItemsSource="{Binding Path=DT}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Длина канала, м"
                    Binding = "{Binding len}" />
                    <DataGridTextColumn Header="Температура, С"
                    Binding = "{Binding temp}" />
                    <DataGridTextColumn Header="Вязкость, Па*с"
                    Binding = "{Binding visc}" /> 
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
